{
  "name": "pastor-choolwe-library-api",
  "version": "1.0.0",
  "description": "a nodejs api for the PCL app and dashboard",
  "main": "index.ts",
  "scripts": {
    "build-sucker": "tsc",
    "preinstall": "npm i -g pm2 && pm2 install pm2-logrotate",
    "heroku-deploy": "tsc && git push heroku main",
    "heroku-push": "git push heroku main",
    "set-vars": "bash variables.sh",
    "dev": "nodemon ./src/index.ts",
    "seed": "ENV=dev ts-node ./src/seeders/index.ts",
    "seed-prod": "ENV=production ts-node ./src/seeders/index.ts",
    "lint": "eslint .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "prod-test": "ENV=production && bash variables.sh && nodemon ./bin/index.js",
    "copy-keys": "copyfiles keys/*.pem bin",
    "clean": "rimraf ./bin/"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Arrant-Solutions/pcl-api.git"
  },
  "author": "willymilimo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Arrant-Solutions/pcl-api/issues"
  },
  "homepage": "https://github.com/Arrant-Solutions/pcl-api#readme",
  "devDependencies": {
    "@types/bluebird": "^3.5.36",
    "@types/body-parser": "^1.19.1",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.8",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/pg": "^8.6.1",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.25.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2"
